# Application properties example file with placeholders for sensitive data

spring.application.name=Marriott_Hotel
server.port=4040

spring.datasource.url=jdbc:mysql://localhost:3306/marriott_hotel_db
spring.datasource.username=${DB_USERNAME}
spring.datasource.password=${DB_PASSWORD}

spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect
spring.jpa.hibernate.ddl-auto=update

aws.s3.secret.key=${AWS_S3_SECRET_KEY}
aws.s3.access.key=${AWS_S3_ACCESS_KEY}

bucket-name=mariott-hotel-images
